<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textFieldOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/textFieldFont</item>
        <item name="boxCornerRadiusTopStart">@dimen/radiusComponents</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radiusComponents</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radiusComponents</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radiusComponents</item>
        <item name="boxStrokeColor">@color/text_input_state_list</item>
        <item name="android:textColorHint">@color/text_input_state_list</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="myEditText">
        <item name="android:textColor">#565656</item>
    </style>

    <style name="myHintTextAppearance">
        <item name="android:textColorHint">@color/text_input_state_list</item>
    </style>

</resources>
